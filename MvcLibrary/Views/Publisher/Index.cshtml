@using MvcLibrary.Models.Entity
@model List<Tbl_Publisher>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Yayın Evleri</h2>
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Durum</th>
            <th>Aktif / Pasif</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                @if (item.Status == false)
                {
                    <td><span class="badge bg-danger">Pasif</span></td>
                }
                else
                {
                    <td><span class="badge badge-success">Aktif</span></td>
                }
                @if (item.Status == false)
                {
                    <td>@Html.ActionLink("Aktif Yap", "DeletePublisher", new { id = item.ID }, new { @class = "btn btn-success", onclick = "return confirm('Gerçekten Aktif Yapmak İstiyor musunuz ?')" })</td>
                }
                else
                {
                    <td>@Html.ActionLink("Pasif Yap", "DeletePublisher", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Pasif Yapmak İstiyor musunuz ?')" })</td>
                }
                <td><a href="/Publisher/GetPublisher/@item.ID" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Publisher/AddPublisher/" class="btn btn-success">Yeni Yayın Evi Ekle</a>
<br />
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
